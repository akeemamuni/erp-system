{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@erp-system/shared-auth": ["libs/shared/auth/src/index.ts"],
      "@erp-system/shared-config": ["libs/shared/config/src/index.ts"],
      "@erp-system/shared-database": ["libs/shared/database/src/index.ts"],
      "@erp-system/shared-logger": ["libs/shared/logger/src/index.ts"],
      "@erp-system/shared-rbac": ["libs/shared/rbac/src/index.ts"],
      "@erp-system/shared-token": ["libs/shared/token/src/index.ts"],
      "@erp-system/shared-types": ["libs/shared/shared-types/src/index.ts"],
      "@erp-system/tenancy": ["libs/tenancy/src/index.ts"],
      "@erp-system/users": ["libs/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
